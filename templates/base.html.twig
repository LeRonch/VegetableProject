<!DOCTYPE html>
<html lang='fr'>
    <head>

        <meta charset="UTF-8">
        <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <title>{% block title %}Végé'Table{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="https://js.stripe.com/v3/"></script>
        <link rel="icon" type="image/png" sizes="16x16" href="{{asset ('assets/images/fruit.png')}}">

            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
            integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
            crossorigin="anonymous">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Oooh+Baby&family=Rancho&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset ('assets/css/tabs.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/nav.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/home.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/client.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/footer.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/login.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/product.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/productDetail.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/register.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/profile.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/cart.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/order.css')}}">
            <link rel="stylesheet" href="{{ asset ('assets/css/confirmation.css')}}">
        {% block stylesheets %}
        {% endblock %}
    </head>
    
    <body>

    {% block header %}
        <nav class="navbar navbar-dark bg-white sticky-top">
                <a id="home" href="{{ path('home') }}" class="navbar-brand">
                    <img src="{{asset ('assets/images/fruit.png')}}" alt="">
                    <span>Végé'Table</span>
                </a>
            {% if is_granted('ROLE_SELLER') %}
                <div>
                    <a class="navbar-brand" href="{{ path ('client_show', {'id': app.user.client.id}) }}">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </a>
                    <a class="navbar-brand" href="{{ path('app_logout') }}">
                        <i class="fa fa-power-off" aria-hidden="true"></i>
                    </a>
                </div>
            {% elseif is_granted('ROLE_BUYER') %}
                <div>
                    <a class="navbar-brand" href="{{ path ('product_index') }}">
                        Produits <i class="fa fa-shopping-basket" aria-hidden="true"></i>
                    </a>
                    <a class="navbar-brand" href="{{ path ('order_index') }}">
                        Commandes <i class="fa fa-eur" aria-hidden="true"></i>
                    </a>
                    <a class="navbar-brand" href="{{ path ('buyer_show', {'id': app.user.buyer.id}) }}">
                        Profil <i class="fa fa-user" aria-hidden="true"></i>
                    </a>
                    <a class="navbar-brand" href="{{ path('cart') }}">
                        Panier <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                    </a>
                    <a class="navbar-brand" href="{{ path('app_logout') }}">
                        <i class="fa fa-power-off" aria-hidden="true"></i>
                    </a>
                </div>
            {% else %}
                <div>
                    <a id="log" class="navbar-brand" href="{{ path('login') }}">Connexion <i class="fa fa-sign-in" aria-hidden="true"></i></a>
                    <a id="sign" class="navbar-brand" href="{{ path('register') }}">Inscription <i class="fa fa-user-plus" aria-hidden="true"></i></a> 
                </div>
            {% endif %}
        </nav>
    {% endblock %}

    {% block body %}


    {% endblock %}

        <footer>
    
            <div id="extlink">
                <p>
                    <i class="fa fa-copyright" aria-hidden="true"></i> 
                    <a target="_blank" href="http://rperrin-portfolio.projets.simplon-roanne.com/">
                        Ronan Perrin
                    </a>
                </p>
            </div>

        </footer>
        
    {% block javascripts %}
        <script src="{{ asset ('assets/js/tabs.js')}}"></script>
        <script src="{{ asset ('assets/js/stripe.js')}}"></script>
    {% endblock %}

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    </body>
</html>